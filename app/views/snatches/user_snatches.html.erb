
<% page_name 'User Snatches' %>

<div class="main">
  
  <h2>User Snatches</h2>
  
  <div class="user_header">
    <%= user_link @user %>
  </div>

  <% if !@snatches.blank? && @snatches.size > 15 %>
    <%= will_paginate @snatches %>
  <% end %>

  <table class="browse user_history">
    <tr>
      <td class="header">
        &nbsp;
      </td>
      <td class="header" width="99%" colspan="2">
        Name
      </td>
      <td class="header_order_by no_wrap">
        When
      </td>
      <td class="header">
        <%= image_tag('comments.png', :alt => 'Commented', :title => 'Commented') %>
      </td>
      <td class="header">
        <%= image_tag('snatches.gif', :alt => 'Snatched', :title => 'Snatched') %>
      </td>
      <td class="header">
        <%= image_tag('seeders.png', :alt => 'Seeders', :title => 'Seeders') %>
      </td>
      <td class="header_order_by">
        <%= image_tag('leechers.png', :alt => 'Leechers', :title => 'Leechers') %>
      </td>
    </tr>
    <% unless @snatches.blank? %>
      <% @snatches.each do |s| %>
        <tr>
          <td class="no_padding">
            <%= type_label s.torrent.type %>
          </td>
          <td class="left no_right_border">
            <%= torrent_link s.torrent, :browse %>
            <%= torrent_additional_info s.torrent %>
          </td>          
          <td class="torrent_download_bookmark">
            <div class="float_right">
              <ul class="compact">
                <li><%= torrent_download_link s.torrent %></li>
              </ul>
            </div>
          </td>
          <td class="no_wrap">
            <%= textual_time_interval s.created_at, 'ago' %>
          </td>
          <td>
            <%= s.torrent.comments_count %>
          </td>
          <td>
            <%= s.torrent.snatches_count %>
          </td>
          <td>
            <%= s.torrent.seeders_count %>
          </td>
          <td>
            <%= s.torrent.leechers_count %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="8">
          No torrents found.
        </td>
      </tr>
    <% end %>
  </table>

  <%= will_paginate @snatches %>

</div>




































