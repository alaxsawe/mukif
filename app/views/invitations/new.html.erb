
<% page_name 'Send An Invitation' %>

<div class="main">
  <h2>Send an Invitation</h2>

  <%= partial 'misc/flash' %>

  <div class="fields_box" style="width:400px;">
    <% form_tag url(:invitations, :create) do %>
      <table>
        <tr>
          <td class="label">
            Email:
          </td>
          <td>
            <%= text_field_tag :email, :value => params[:email], :size => 45, :maxlength => 200 %>
          </td>
        <tr>
          <td colspan="2" class="center">
            <ul class="buttons">
              <li><%= submit_tag 'Send', :class => 'submit' %></li>
              <li><%= submit_tag 'Cancel', :name => 'cancel', :class => 'submit' %></li>
            </ul>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
</div>
