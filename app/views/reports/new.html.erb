
<% page_name 'New Report' %>

<div class="main">
  
  <h2>Report :: <%= params[:type].humanize %></h2>

  <%= partial 'misc/flash' %>

  <div class="fields_box" style="width:650px;">
    <% form_tag url(:reports, :create, :type => params[:type], :id => params[:id]) do %>
      <table>
        <tr>
          <td class="label">
            Reason:
          </td>
          <td>
            <%= text_field_tag :reason, :value => params[:reason], :size => 80, :maxlength => 200 %>
          </td>
        </tr>
        <tr>
          <td colspan="2" class="center">
            <ul class="buttons">
              <li><%= submit_tag 'Send', :class => 'submit' %></li>
            </ul>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
</div>