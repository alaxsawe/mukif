
<% page_name 'Styles' %>

<div class="main">
  
  <h2>style edition</h2>
  
  <div class="fields_box" style="width:520px;">
    <% form_for :style, url(:styles, :update, :id => @style), :method => :put do |f| %>
      <table>
        <tr>
          <td class="label">
            description:
          </td>
          <td>
            <%= f.text_field :description, :size => 20 %>
          </td>
          <td class="label">
            stylesheet:
          </td>
          <td>
            <%= f.text_field :stylesheet, :size => 30 %>
          </td>
        </tr>
        <tr>
          <td colspan="4" class="center">
            <%= f.submit 'confirm', :class => 'submit' %>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
</div>