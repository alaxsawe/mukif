
<table class="panel">
  <tr>
    <td>
      <table>
        <tr>
          <td>
            <a id="bold">
              <%= image_tag('editor/text_bold.gif', :class => 'button', :alt => 'Bold', :title => 'Bold') %>
            </a>
          </td>
          <td>
            <a id="italic">
              <%= image_tag('editor/text_italic.gif', :class => 'button', :alt => 'Italic', :title => 'Italic') %>
            </a>
          </td>
          <td>
            <a id="underline">
              <%= image_tag('editor/text_underline.gif', :class => 'button', :alt => 'Underline', :title => 'Underline') %>
            </a>
          </td>
          <td>
            <a id="strike">
              <%= image_tag('editor/text_strike.gif', :class => 'button', :alt => 'Strike', :title => 'Strike') %>
            </a>
          </td>
          <td>
            &nbsp;
          </td>
          <td>
            <a id="left">
              <%= image_tag('editor/text_left.gif', :class => 'button', :alt => 'Align Left', :title => 'Align Left') %>
            </a>
          </td>
          <td>
            <a id="center">
              <%= image_tag('editor/text_center.gif', :class => 'button', :alt => 'Centered', :title => 'Centered') %>
            </a>
          </td>
          <td>
            <a id="right">
              <%= image_tag('editor/text_right.gif', :class => 'button', :alt => 'Align Right', :title => 'Align Right') %>
            </a>
          </td>
          <td>
            &nbsp;
          </td>
          <td>
            <select id="color">
              <option value="color" selected="selected">Color</option>
              <option value="black">Black</option>
              <option value="red">Red</option>
              <option value="yellow">Yellow</option>
              <option value="pink">Pink</option>
              <option value="green">Green</option>
              <option value="orange">Orange</option>
              <option value="purple">Purple</option>
              <option value="blue">Blue</option>
              <option value="brown">Brown</option>
            </select>
          </td>
          <td>
            &nbsp;
          </td>
          <td>
            <select id="size">
              <option value="size" selected="selected">Size</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
            </select>
          </td>
          <td>
            &nbsp;
          </td>
          <td>
            <a id="image">
              <%= image_tag('editor/img.gif', :class => 'button', :alt => 'Image', :title => 'Image') %>
            </a>
          </td>
          <td>
            <a id="hyperlink">
              <%= image_tag('editor/url.gif', :class => 'button', :alt => 'Hyperlink', :title => 'Hyperlink') %>
            </a>
          </td>
          <td>
            <a id="quote">
              <%= image_tag('editor/quote.gif', :class => 'button', :alt => 'Quote', :title => 'Quote') %>
            </a>
          </td>
          <td>
            <a id="youtube">
              <%= image_tag('editor/youtube.gif', :class => 'button', :alt => 'Youtube Video', :title => 'Youtube Video') %>
            </a>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td>
      <table>
        <tr>
          <td>
            <a id="em_smile">
              <%= image_tag('emoticons/smile.gif', :class => 'emoticon', :alt => ':-)') %>
            </a>
          </td>
          <td>
            <a id="em_wink">
              <%= image_tag('emoticons/wink.gif', :class => 'emoticon', :alt => ';-)') %>
            </a>
          </td>
          <td>
            <a id="em_grin">
              <%= image_tag('emoticons/grin.gif', :class => 'emoticon', :alt => ':-D') %>
            </a>
          </td>
          <td>
            <a id="em_cool">
              <%= image_tag('emoticons/cool.gif', :class => 'emoticon', :alt => '8-)') %>
            </a>
          </td>
          <td>
            <a id="em_kiss">
              <%= image_tag('emoticons/kiss.gif', :class => 'emoticon', :alt => ':-*') %>
            </a>
          </td>
          <td>
            <a id="em_upset">
              <%= image_tag('emoticons/upset.gif', :class => 'emoticon', :alt => ':-/') %>
            </a>
          </td>
          <td>
            <a id="em_none">
              <%= image_tag('emoticons/none.gif', :class => 'emoticon', :alt => ':-|') %>
            </a>
          </td>
          <td>
            <a id="em_angry">
              <%= image_tag('emoticons/angry.gif', :class => 'emoticon', :alt => '>:-(') %>
            </a>
          </td>
          <td>
            <a id="em_sad">
              <%=  image_tag('emoticons/sad.gif', :class => 'emoticon', :alt => ':-(') %>
            </a>
          </td>
          <td>
            <a id="em_cry">
              <%= image_tag('emoticons/cry.gif', :class => 'emoticon', :alt => ':-(')  %>
            </a>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
