
<% page_name 'Types' %>

<div class="main">
  
  <h2>new type</h2>
  
  <div class="fields_box" style="width:830px;">
    <% form_for :type, url(:types, :create) do |f| %>
      <table>
        <tr>
          <td class="label">
            description:
          </td>
          <td>
            <%= f.text_field :description, :size => 35 %>
          </td>
          <td class="label">
            position:
          </td>
          <td>
            <%= f.text_field :position, :size => 3 %>
          </td>
          <td class="label">
            image:
          </td>
          <td>
            <%= f.text_field :image, :size => 40 %>
          </td>
        </tr>
        <tr>
          <td colspan="6" class="center">
            <%= submit_tag 'confirm', :class => 'submit' %>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
</div>