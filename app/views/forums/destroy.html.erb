
<% page_name 'Forums' %>

<div class="main">
  <div class="forums">
    
    <div class="page_header">
      <%= link_to 'Forums', url(:forums, :index) %>
    </div>

    <h3>forum deletion</h3>

    <% form_tag url(:forums, :destroy, :id => @forum), :method => :delete do %>
      <table class="details">
        <tr>
          <td class="label">
            name
          </td>
          <td>
            <%= @forum.name %>
          </td>
        </tr>
        <tr>
          <td class="label">
            postition
          </td>
          <td>
            <%= @forum.position %>
          </td>
        </tr>
        <tr>
          <td class="label">
            description
          </td>
          <td>
            <%= @forum.description %>
          </td>
        </tr>
        <tr>
          <td colspan="2" class="center">
            <ul class="buttons">
              <li><%= submit_tag 'delete', :class => 'submit' %></li>
            </ul>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
</div>





