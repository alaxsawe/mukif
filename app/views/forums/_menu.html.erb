

  <div class="links">
    <% if !forum.topics_locked? || current_user.admin_mod? %>
      <%= link_to '[ new topic ]', url(:topics, :new, :forum_id => forum) %>
    <% end %>
    
    <% if current_user.admin? %>
      <%= link_to '[ edit forum ]', url(:forums, :edit, :id => forum), :class => 'admin' %>      
      <%= link_to (forum.topics_locked? ? '[ unlock forum ]' : '[ lock forum ]'), url(:forums, :switch_lock_topics, :id => forum), :method => :put, :class => 'admin' %>
    <% end %>

    <% if current_user.owner? %>
      <%= link_to '[ delete forum ]', url(:forums, :destroy, :id => forum), :class => 'owner' %>
    <% end %>
  </div>