
<% page_name 'Countries' %>

<div class="main">
  
  <h2>countries</h2>

  <div class="links">
    <%= link_to '[ new ]', url(:countries, :new), :class => 'admin' %>
  </div>
  
  <table class="browse">
    <tr>
      <td class="header">
        &nbsp; id &nbsp;
      </td>
      <td class="header_order_by">
        description
      </td>
      <td class="header">
        image
      </td>
      <td class="header">
        &nbsp;
      </td>
      <td class="header">
        &nbsp;
      </td>
      <td class="header">
        &nbsp;
      </td>
    </tr>
    <% unless @countries.blank? %>
      <% @countries.each do |c| %>
        <tr>
          <td>
            <%= c.id %>
          </td>
          <td>
            <%= c.description %>
          </td>
          <td>
            <%= c.image %>
          </td>
          <td>
            <%= country_image c %>
          </td>
          <td class="no_wrap">
            <%= link_to '[ edit ]', url(:countries, :edit, :id => c), :class => 'admin' %>
          </td>
          <td class="no_wrap">
            <%= link_to '[ delete ]', url(:countries, :destroy, :id => c), :method => :delete, :class => 'admin', :confirm => 'Are you sure?' %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="6">
          no countries found
        </td> 
      </tr>
    <% end %>
  </table>
</div>