
<% page_name 'Countries' %>

<div class="main">
  
  <h2>country edition</h2>
  
  <div class="fields_box" style="width:550px;">
    <% form_for :country, url(:countries, :update, :id => @country), :method => :put do |f| %>
      <table>
        <tr>
          <td class="label">
            description:
          </td>
          <td>
            <%= f.text_field :description, :size => 15 %>
          </td>
          <td class="label">
            image:
          </td>
          <td>
            <%= f.text_field :image, :size => 40 %>
          </td>
        </tr>
        <tr>
          <td colspan="4" class="center">
            <%= submit_tag 'confirm', :class => 'submit' %>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
</div>