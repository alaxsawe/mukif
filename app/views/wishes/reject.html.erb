
<% page_name 'Request Filling Rejection' %>

<div class="main">
  
  <h2>request filling rejection</h2>

  <div class="wish_header">
    <%= wish_link @wish %>
  </div>

  <%= partial 'misc/flash' %>

  <div class="fields_box" style="width:650px;">
    <% form_tag url(:wishes, :reject, :id => @wish), :method => :put do %>
      <table>
        <tr>
          <td class="label">
            reason:
          </td>
          <td>
            <%= text_field_tag :reason, :size => 80, :maxlength => 200 %>
          </td>
        </tr>
        <tr>
          <td colspan="2" class="center">
            <ul class="buttons">
              <li><%= submit_tag 'confirm', :class => 'submit' %></li>
            </ul>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
</div>